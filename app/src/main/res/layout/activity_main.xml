<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/view4"
        android:background="?attr/colorPrimary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/view4"
        android:id="@+id/flow_wave"
        android:background="@drawable/ic_wave"/>

    <TextView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SiKobeh"
        android:textSize="50sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sistem Informasi Konsep Berita Harian"
        android:textSize="20sp"
        android:textColor="?attr/colorOnPrimary"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"
        tools:ignore="MissingConstraints"
        android:gravity="center_horizontal" />

    <ImageView
        android:id="@+id/image_icon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_below="@+id/flow_wave"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="142dp"
        android:layout_marginLeft="142dp"
        android:layout_marginEnd="149dp"
        android:layout_marginRight="149dp"
        android:src="@mipmap/ic_sikobeh_apps" />

    <Button
        android:id="@+id/LoginKoordinator"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image_icon"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="38dp"
        android:layout_marginRight="10dp"
        android:text="Login Sebagai Koordinator"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/LoginWartawan"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Login Sebagai Wartawan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_centerInParent="true"
        android:layout_below="@id/LoginKoordinator"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/creditText"
        android:textSize="12dp"
        android:textColor="?attr/colorOnSecondary"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:text="Â©BanuaDev"/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:layout_above="@id/creditText"
        android:textColor="?attr/colorOnSecondary"
        android:gravity="center_horizontal"
        android:text="Universitas Tadulako - Teknik Informatika 18"/>

</RelativeLayout>