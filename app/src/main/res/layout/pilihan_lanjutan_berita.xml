<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bagikan ke Whats App"
        android:drawableLeft="@drawable/ic_baseline_share_24"
        android:id="@+id/bagikanWA" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bagikanWA"
        android:text="Unduh berita ke Penyimpanan"
        android:drawableLeft="@drawable/ic_baseline_file_download_24"
        android:id="@+id/buatFileText" />
</RelativeLayout>